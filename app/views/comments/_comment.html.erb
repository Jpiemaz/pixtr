<div>
  <%= div_for comment do %>
    <%= comment.user.email %> said:
    <%= comment.body %>
    <%= time_ago_in_words(comment.created_at) %> ago
    <% if current_user && current_user ==comment.user %>
      <%= button_to "Delete", comment, method: :delete, remote: true %>
    <% end %>
  <% end %>
</div>
