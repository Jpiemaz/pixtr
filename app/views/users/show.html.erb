<h2><%= @user.email %></h2>

<% if current_user != @user %>
  <% if current_user.following? @user %>
    <%= button_to "Unfollow #{@user.email}", unfollow_user_path(@user), method: :delete %>
  <% else %>
    <%= button_to "Follow", follow_user_path(@user) %>
  <% end %>
<% end %>

<div>
  <strong><%= @user.email %>'s Groups</strong>
  <%= render @groups %>
</div>
<div>
  <p>
    <strong><%= @user.email %>'s Images</strong>
  </p>
  <%= render @images %>
</div>

