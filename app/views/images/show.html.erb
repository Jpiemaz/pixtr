<h2><%= @image.name %></h2>

<% if @image.user == current_user %>
	<div>
		<%= link_to "Edit Image", edit_image_path(@image) %>
	</div>
	<div>
		<%= link_to "Delete", image_path(@image), method: :delete %>
	</div>
<% end %>

<%= image_tag(@image.url, width: "400" )%>
<p><%= @image.description %></p>
<p>Added by: <%= link_to @image.user.email, @image.user %></p>
<p>Added on: <%= @image.created_at.day%>

<% if signed_in? %>
	<%= form_for([@image, @comment]) do |form| %>
		<%= form.text_area :body %>
		<%= form.submit "Comment" %>
	<% end %>
<% else %>
	<%= link_to "Sign in", sign_in_path %>
<% end %>

<%= render @comments %>
<%= paginate @comments %>